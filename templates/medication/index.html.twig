{% extends 'base.html.twig' %}

{% block title %}Medication index{% endblock %}

{% block body %}
    <h1>Medication index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Effect</th>
                <th>Price</th>
                <th>Insured</th>
                <th>Side_effect</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medication in medications %}
            <tr>
                <td>{{ medication.id }}</td>
                <td>{{ medication.name }}</td>
                <td>{{ medication.effect }}</td>
                <td>{{ medication.price }}</td>
                <td>{{ medication.insured ? 'Yes' : 'No' }}</td>
                <td>{{ medication.sideEffect }}</td>
                <td>
                    <a href="{{ path('medication_show', {'id': medication.id}) }}">show</a>
                    <a href="{{ path('medication_edit', {'id': medication.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('medication_new') }}">Create new</a>
{% endblock %}
